#!/usr/bin/env bash

export DOTFILES_DIR="${DOTFILES_DIR:-$(cd -- "$(dirname "$0")/../.." &>/dev/null && pwd -P)}"

if [ "$#" -gt 0 ]; then
  exec ssh "$@"
fi

host_label=$("$DOTFILES_DIR/scripts/bin/select-ssh-host")

exec perl <<EOF
  use strict;
  use warnings;
  require '$DOTFILES_DIR/scripts/perl/wrapper.pl';
  print_and_exit(['ssh-utils', 'ssh', '$host_label'], 100);
EOF
