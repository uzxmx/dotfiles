#!/usr/bin/env bash

set -eo pipefail

dotfiles_dir="$(realpath "$(dirname "$BASH_SOURCE")/..")"

usage() {
  cat <<-EOF
Search filenames and file contents from docs and dotfiles dirs.
EOF
  exit 1
}

case "$1" in
  "")
    dirs=()
    if [ -d ~/.resources/docs/src ]; then
      dirs+=(~/.resources/docs/src)
    fi
    if [ -d ~/.resources/snippets/src ]; then
      dirs+=(~/.resources/snippets/src)
    fi
    dirs+=("$dotfiles_dir")
    s --filename "${dirs[@]}"
    ;;
  *)
    usage
    ;;
esac
