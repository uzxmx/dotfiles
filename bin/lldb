#!/usr/bin/env bash

set -eo pipefail

dotfiles_dir="$(realpath "$(dirname "$BASH_SOURCE")/..")"
lldb_dir="$dotfiles_dir/scripts/lldb"

source "$dotfiles_dir/scripts/lib/cli.sh"

usage() {
  cat <<-EOF
Wrapper for lldb utility.

Subcommands:
  a, attach     - attach to a running program
  e, entrypoint - show entrypoint address
  s, start      - start lldb and stop at the entrypoint
EOF
  exit 1
}

case "$1" in
  a | attach | e | entrypoint | s | start)
    case "$1" in
      a)
        name="attach"
        ;;
      e)
        name="entrypoint"
        ;;
      s)
        name="start"
        ;;
      *)
        name="$1"
        ;;
    esac
    source "$lldb_dir/$name.sh"
    run "$@"
    ;;
  -h)
    usage
    ;;
  -)
    shift
    lldb "$@"
    ;;
  *)
    lldb "$@"
    ;;
esac
