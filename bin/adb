#!/usr/bin/env bash

set -eo pipefail

dotfiles_dir="$(realpath "$(dirname "$BASH_SOURCE")/..")"
adb_dir="$dotfiles_dir/scripts/adb"

usage() {
  cat <<-EOF
Wrapper for adb utility. Use 'adb --help' to get the original help.

Subcommands:
  d          - list devices
  i, install - enhanced adb install
  l, logcat  - enhanced adb logcat
  ps         - show all processes
  root       - wrapped root command
EOF
  exit 1
}

source "$dotfiles_dir/scripts/lib/path.sh"
PATH="$(new_path_exclude "$dotfiles_dir/bin")"

alias_cmd() {
  local new_name="$1"
  local old_name="$2"
  eval "
    usage_$new_name() {
      usage_$old_name \"\$@\"
    }
    cmd_$new_name() {
      cmd_$old_name \"\$@\"
    }
  "
}

run() {
  local cmd="$1"
  shift
  case "$1" in
    -h)
      type "usage_$cmd" &>/dev/null && "usage_$cmd"
      ;;
  esac
  "cmd_$cmd" "$@"
}

case "$1" in
  i | install | l | logcat | ps | root)
    case "$1" in
      i)
        name="install"
        ;;
      l)
        name="logcat"
        ;;
      *)
        name="$1"
        ;;
    esac
    source "$adb_dir/$name.sh"
    run "$@"
    ;;
  d)
    shift
    adb devices "$@"
    ;;
  -h)
    usage
    ;;
  -)
    shift
    adb "$@"
    ;;
  *)
    adb "$@"
    ;;
esac
