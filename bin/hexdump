#!/usr/bin/env bash

set -eo pipefail

export DOTFILES_DIR="${DOTFILES_DIR:-$(cd -- "$(dirname "$0")/.." &>/dev/null && pwd -P)}"
hexdump_dir="$DOTFILES_DIR/scripts/hexdump"

source "$DOTFILES_DIR/scripts/lib/cli.sh"

usage() {
  cat <<-EOF
Wrapper for hexdump utility.

Subcommands:
  p, parse - parse hexadecimal string to binary, and vice versa
  bin      - display the input integer in binary/hex

Example:
  # Dump a binary file
  hexdump -C file.bin

  # Dump a string
  echo -n foo | hexdump -C
EOF
  exit 1
}

case "$1" in
  p | parse | bin)
    case "$1" in
      p)
        name="parse"
        ;;
      *)
        name="$1"
    esac
    source "$hexdump_dir/$name.sh"
    run "$@"
    ;;
  -h)
    usage
    ;;
  -)
    shift
    hexdump "$@"
    ;;
  *)
    if [ "$#" -eq 1 -a -f "$1" ]; then
      hexdump -C "$1"
    else
      hexdump "$@"
    fi
esac
