#!/usr/bin/env bash

set -eo pipefail

dotfiles_dir="$(realpath "$(dirname "$BASH_SOURCE")/..")"

usage() {
  cat <<-EOF
Wrapper for dig utility.

Examples:

dig @nameserver hostname
dig hostname MX
EOF
  exit 1
}

source "$dotfiles_dir/scripts/lib/bin_wrapper.sh"

if [ "$#" -eq 1 -a "$1" = "-h" ]; then
  usage
fi

ensure_origin_exists dig network_tools

run_origin "$@"
